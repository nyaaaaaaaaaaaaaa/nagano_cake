<p id = "notice"></p>
<div class = "container px-5 px-sm-0">
  <div class="row">
    <div class>
        <h4>会員一覧</h4>
    </div>
  </div>
  <div class></br></div>
    <table class = "table">
      <thead>
        <th>会員ID</th>
        <th>氏名</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
      </thead>
      <% @customers.each do |customer| %>
      <tbody>
        <tr>
          <td><%= customer.id %></td>
          <td><%= link_to customer.last_name, "/admin/customers/#{customer.id}" %><%= link_to customer.first_name, "/admin/customers/#{customer.id}" %></td>
          <td><%= customer.email%></td>
          <td>
            <%if customer.is_deleted %>
            <span style="color:gray">退会</span>
            <% else %>
            <span style="color:green">有効</span>
            <% end %>
          </td>
        </tr>
      </tbody>
      <% end %>
    </table>
</div>
<div class="d-flex justify-content-center">
  <%= paginate @customers %>
</div>