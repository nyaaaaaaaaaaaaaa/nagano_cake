<p id = "notice"></p>
<div class = "container px-5 px-sm-0">
  <div class="row">
    <div class>
        <h4><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h4>
    </div>
  </div>
  <div class></br></div>
  <%= form_with model: @customer, url: admin_customer_path, method: :patch do |f| %>
  <p style="line-height:2rem"></p>
  <div class = "row">
    <div class = "col-lg-2">会員ID</div>
    <div class = "col-lg-10"><%= @customer.id %></div>
  </div>
  <p style="line-height:2rem"></p>
  <div class = "row">
    <div class = "col-lg-2">氏名</div>
    <div class = "col-lg-10"><%= f.text_field :last_name %>&nbsp;<%= f.text_field :first_name %></div>
  </div>
  <p style="line-height:2rem"></p>
  <div class = "row">
    <div class = "col-lg-2">フリガナ</div>
    <div class = "col-lg-10"><%= f.text_field :last_name_kana %>&nbsp;<%= f.text_field :first_name_kana %></div>
  </div>
  <p style="line-height:2rem"></p>
  <div class = "row">
    <div class = "col-lg-2">郵便番号</div>
    <div class = "col-lg-10"><%= f.text_field :postal_code %></div>
  </div>
  <p style="line-height:2rem"></p>
  <div class = "row">
    <div class = "col-lg-2">住所</div>
    <div class = "col-lg-10"><%= f.text_field :address %></div>
  </div>
  <p style="line-height:2rem"></p>
  <div class = "row">
    <div class = "col-lg-2">電話番号</div>
    <div class = "col-lg-10"><%= f.text_field :telephone_number %></div>
  </div>
  <p style="line-height:2rem"></p>
  <div class = "row">
    <div class = "col-lg-2">メールアドレス</div>
    <div class = "col-lg-10"><%= f.text_field :email %></div>
  </div>
  <p style="line-height:2rem"></p>
  <div class = "row">
    <div class = "col-lg-2">会員ステータス</div>
    <div class = "col-lg-10">
      <%= f.radio_button :is_deleted, :false %>
      <%= f.label :is_deleted, "有効", {value: :false, style: "display: inline-block;"} %>
      &nbsp;
      <%= f.radio_button :is_deleted, :true %>
      <%= f.label :is_deleted, "退会", {value: :true, style: "display: inline-block;"} %>
    </div>
  </div>
  <% end %>
  <p style="line-height:2rem"></p>
  <div class = "row">
    <div class = "col-lg-2"></div>
    <div class = "col-lg-5">
      <%= link_to '変更を保存する', admin_customer_path(@customer), class:"btn btn-ig btn-success btn-text-light" %>
    </div>
  </div>
</div>