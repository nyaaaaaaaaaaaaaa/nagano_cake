  <p id = "notice"></p>
  <div class = "container px-5 px-sm-0">
    <h4>商品詳細</h4>
    <div class></br></div>
    <div class = "row">
      <div class="col-lg-4">
        <% if @item.image.attached? %>
        <%= image_tag @item.image, size: "300x250" %>
        <% else %>
        <%= image_tag 'no_image', size: "300x250" %>
        <% end %>
      </div>
      <div class = "col-lg-8">
        <div class = "row">
          <div class = "col-lg-3">商品名</div>
          <div class = "col-lg-5"><%= @item.name %></div>
        </div>
        <p style="line-height:2rem"></p>
        <div class = "row">
          <div class = "col-lg-3"> 商品説明</div>
          <div class = "col-lg-5"><%= @item.introduction %></div>
        </div>
        <p style="line-height:2rem"></p>
        <div class = "row">
          <div class = "col-lg-3">ジャンル</div>
          <div class = "col-lg-5"><%= @item.genre_id %></div>
        </div>
        <p style="line-height:2rem"></p>
        <div class = "row">
          <div class = "col-lg-3">税込価格</br>（税抜価格）</div>
          <div class = "col-lg-5"><%= @item.with_tax_price.to_s(:delimited) %>（<%= @item.price %>）円</div>
        </div>
        <p style="line-height:2rem"></p>
        <div class = "row">
          <div class = "col-lg-3">販売ステータス</div>
          <div class = "col-lg-5">
            <%if @item.is_active %>
            <span style="color:green">販売中</span>
            <% else %>
            <span style="color:gray">販売停止中</span>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class></br></div>
    <div class = "row">
      <div class="col-lg-5"></div>
      <div class="col-lg-7">
        <%= link_to '編集する', edit_admin_item_path(@item), class:"btn btn-lg btn-success btn-text-light" %>
      </div>
    </div>
  </div>
