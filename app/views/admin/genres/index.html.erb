<main>
  <p id = "notice"></p>
  <div class = "container">
    <%= form_with model: Genre.new, url: admin_genres_path do |f| %>
    <div class = "row">
      <h4>ジャンル一覧・追加</h4>
    </div>
    <div class></br></div>
    <div class = "row">
      <div class="field">
        <strong><%= f.label :ジャンル名 %></strong>
        <%= f.text_field :name %>
      </div>
      <div class="col-lg-1"></div>
      <div class="actions">
        <%= f.submit "新規登録", class:"btn btn-lg btn-success btn-text-light" %>
      </div>
    </div>
     <% end %>
    <div class></br></div>
    <div class></br></div>
    <div class = "row">
      <div class="col-lg-8">
      <table class = "table">
        <thead>
          <th>ジャンル</th>
          <th>&nbsp;</th>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to '編集する', edit_admin_genre_path(genre), class:"btn btn-sm btn-success btn-text-light" %></td>
          </tr>
         <% end %>
        </tbody>
      </table>
      </div>
    </div>
  </div>
</main>

