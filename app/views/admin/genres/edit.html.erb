<main>
  <p id = "notice"></p>
  <div class = "container px-5 px-sm-0">
    <div class = "row">
      <div class = "col-lg-3"></div>
      <div class = "col-lg-9 px-3 mx-auto">
        <h4>ジャンル編集</h4>
      </div>
    </div>
    <div class></br></div>
    <%= form_with model: @genre, url: admin_genre_path, method: :patch do |f| %>
    <div class="field">
      <div class = "row">
        <div class = "col-lg-2"></div>
        <div class = "col-lg-2">
          <%= f.label :ジャンル名 %>
        </div>
        <div class = "col-lg-3">
          <%= f.text_field :name, size: "20x20" %>
        </div>
        <div class="actions">
          <div class = "col-lg-3">
            <%= f.submit '変更を保存', class:"btn btn-sm btn-success btn-text-light" %>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</main>