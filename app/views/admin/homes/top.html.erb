<p id = "notice"></p>
<div class = "container">
  <h4 class = "px-3">
    注文履歴一覧
  </h4>
  <div class></br></div>
  <table class = "table">
    <thead>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </thead>
    <tbody>
      <tr>
      <% @orders.each do |order| %>
        <td><%= link_to order.created_at.strftime('%Y/%m/%d'), "/admin/orders/#{order.id}" %></td>
        <td><%= order.customer.last_name %>
            <%= order.customer.first_name %></td>
        <td><%= order.order_details.sum(:amount) %></td>
        <td><%= order.status_i18n %></td>
      <% end %>
      </tr>
    </tbody>
  </table>
</div>
<div class="d-flex justify-content-center">
  <%= paginate @orders %>
</div>
