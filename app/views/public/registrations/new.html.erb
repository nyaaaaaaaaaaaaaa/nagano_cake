<main>
  <p id = "notice"></p>
  <div class = "container px-5 px-sm-0">
    <div class = "row">
      <div class = "col-lg-10 px-3 mx-auto">
        <h4>新規会員登録</h4>
      </div>
      <div class></br></div>
      <div class = "col-lg-12 px-3 mx-auto">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>
      <div class="field">
        <div class = "row">
          <div class = "col-lg-1"></div>
          <div class = "col-lg-2">
            名前
          </div>
          <div class = "col-lg-1">
            <%= f.label :（姓） %>
          </div>
          <div class = "col-lg-2">
            <%= f.text_field :last_name %>
          </div>
          <div class = "col-lg-1">
            <%= f.label :（名） %>
          </div>
          <div class = "col-lg-2">
            <%= f.text_field :first_name %>
          </div>
        </div>
      </div>
      <p style="line-height:2rem"></p>
      <div class="field">
        <div class = "row">
          <div class = "col-lg-1"></div>
          <div class = "col-lg-2">
            フリガナ
          </div>
          <div class = "col-lg-1">
            <%= f.label :（セイ） %>
          </div>
          <div class = "col-lg-2">
            <%= f.text_field :last_name_kana %>
          </div>
          <div class = "col-lg-1">
            <%= f.label :（メイ） %>
          </div>
          <div class = "col-lg-2">
            <%= f.text_field :first_name_kana %>
          </div>
        </div>
      </div>
      <p style="line-height:2rem"></p>
      <div class="field">
        <div class = "row">
          <div class = "col-lg-1"></div>
          <div class = "col-lg-3">
            <%= f.label :メールアドレス %>
          </div>
          <div class = "col-lg-5">
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>
        </div>
      </div>
      <p style="line-height:2rem"></p>
      <div class="field">
        <div class = "row">
          <div class = "col-lg-1"></div>
          <div class = "col-lg-3">
            <%= f.label :郵便番号（ハイフンなし） %>
          </div>
          <div class = "col-lg-5">
            <%= f.text_field :postal_code %>
          </div>
        </div>
      </div>
      <p style="line-height:2rem"></p>
      <div class="field">
        <div class = "row">
          <div class = "col-lg-1"></div>
          <div class = "col-lg-3">
            <%= f.label :住所 %>
          </div>
          <div class = "col-lg-5">
            <%= f.text_field :address, size: "60x20" %>
          </div>
        </div>
      </div>
      <p style="line-height:2rem"></p>
      <div class="field">
        <div class = "row">
          <div class = "col-lg-1"></div>
          <div class = "col-lg-3">
            <%= f.label :電話番号（ハイフンなし） %>
          </div>
          <div class = "col-lg-5">
            <%= f.text_field :telephone_number %>
          </div>
        </div>
      </div>
      <p style="line-height:2rem"></p>
      <div class="field">
        <div class = "row">
          <div class = "col-lg-1"></div>
          <div class = "col-lg-3">
            <%= f.label :パスワード（6文字以上） %>
          </div>
          <div class = "col-lg-5">
            <!--<% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>-->
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>
        </div>
      </div>
      <p style="line-height:2rem"></p>
      <div class="field">
        <div class = "row">
          <div class = "col-lg-1"></div>
          <div class = "col-lg-3">
            <%= f.label :パスワード（確認用） %>
          </div>
          <div class = "col-lg-5">
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>
        </div>
      </div>
      <p style="line-height:2rem"></p>
      <div class = "row">
        <div class = "col-lg-4"></div>
        <div class="actions">
          <div class = "col-lg-4">
            <%= f.submit "新規登録", class:"btn btn-sm btn-success btn-text-light" %>
          </div>
        </div>
      </div>
      <% end %>
      <div class></br></div>
      <div class = "row">
        <div class = "col-lg-2"></div>
        <div class = "col-lg-10">
          <strong>既に登録済みの方</strong>
        </div>
      </div>
      <p style="line-height:2rem"></p>
      <div class = "row">
        <div class = "col-lg-3"></div>
        <div class = "col-lg-9">
          <%= link_to "こちら", new_customer_session_path %>
          からログインしてください。
        </div>
      </div>
    </div>
  </div>
</main>